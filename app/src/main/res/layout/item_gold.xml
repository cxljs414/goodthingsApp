<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:paddingLeft="15dp"
    android:paddingRight="29dp"
    android:paddingTop="15dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/item_gold_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金币兑换"
        android:textSize="15sp"
        android:textColor="@color/grey_333333"/>

    <TextView
        android:id="@+id/item_gold_cash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_gold_type"
        android:text="+0.16"
        android:textSize="18sp"
        android:textColor="@color/red"/>

    <TextView
        android:id="@+id/item_gold_balance"
        android:layout_below="@id/item_gold_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textSize="12sp"
        android:textColor="@color/grey_153"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/item_gold_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@id/item_gold_type"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/item_gold_balance"
        android:text="2018-01-23 12:34"
        android:textSize="12sp"
        android:textColor="@color/grey_153"/>
</RelativeLayout>