<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:id="@+id/item_mainfrag_bitimage_root"
    >

    <ImageView
        android:id="@+id/item_mainfrag_bigimage_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_grey_gradual">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:orientation="vertical"
            android:paddingTop="10dp"

            >
            <TextView
                android:id="@+id/item_mainfrag_bigimage_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textSize="15sp"
                android:text=""
                android:textColor="@color/white"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                >
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_mainfrag_bigimage_headview"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true" />


                <TextView
                    android:id="@+id/item_mainfrag_bigimage_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/share_white"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:text="分享"
                    android:textColor="@color/white"/>


                <TextView
                    android:id="@+id/item_mainfrag_bigimage_collectcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@id/item_mainfrag_bigimage_share"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/collect_white"
                    android:drawablePadding="5dp"
                    android:textSize="11sp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/item_mainfrag_bigimage_nickname"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/item_mainfrag_bigimage_headview"
                    android:layout_toLeftOf="@id/item_mainfrag_bigimage_collectcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textSize="11sp"
                    android:text=""
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>