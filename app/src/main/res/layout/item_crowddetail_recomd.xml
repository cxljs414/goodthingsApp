<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_crowdrecom_root">

    <LinearLayout
        android:id="@+id/item_crowdrecom_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_crowdrecom_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY" />

    </LinearLayout>

    <TextView
        android:id="@+id/item_crowdrecom_title"
        android:layout_below="@id/item_crowdrecom_image_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        tools:text="尚德红菊"
        android:textSize="16sp"
        android:textColor="@color/grey_333333"
        />

    <TextView
        android:id="@+id/item_crowdrecom_price"
        android:layout_below="@id/item_crowdrecom_title"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:lines="1"
        tools:text="￥3333"
        android:textSize="15sp"
        android:textColor="@color/red_cc3333" />

    <TextView
        android:id="@+id/item_crowdrecom_salenum"
        android:layout_below="@id/item_crowdrecom_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:lines="1"
        android:gravity="bottom"
        tools:text="16个支持者"
        android:textSize="12sp"
        android:textColor="@color/grey_153" />
</RelativeLayout>