<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:id="@+id/item_groupbuy_root">
    <LinearLayout
        android:id="@+id/item_groupbuy_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_groupbuy_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_groupbuy_title"
        android:layout_below="@id/item_groupbuy_image_layout"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        tools:text="上的飞机爱丽丝的飞机零件是劳动纠纷垃圾的说服力是老大放假啦"
        android:textColor="@color/grey_333333"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:id="@+id/item_groupbuy_type0"
        android:layout_below="@id/item_groupbuy_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="85dp"
            android:layout_height="29dp"
            android:layout_alignBaseline="@+id/item_groupbuy_price"
            android:layout_alignBottom="@+id/item_groupbuy_price"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_redff4949_corner_5"
            android:gravity="center"
            android:text="去拼团>"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_groupbuy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="￥12.98"
            android:textColor="@color/red_ff4949"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_groupbuy_count"
            android:layout_toRightOf="@id/item_groupbuy_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            tools:text="已团55件"
            android:textColor="@color/grey_153"
            android:textSize="10sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_groupbuy_type1"
        android:layout_below="@id/item_groupbuy_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/item_groupbuy_main_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_groupbuy_main_price"
            android:layout_alignBottom="@+id/item_groupbuy_main_price"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="已团23434件"
            android:textSize="12sp"
            android:textColor="@color/grey_102" />
        <TextView
            android:id="@+id/item_groupbuy_price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:background="@drawable/bg_redff4949_corner_5"
            android:gravity="center"
            android:text="拼团价"
            android:textSize="9dp"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/item_groupbuy_main_price"
            android:layout_toRightOf="@id/item_groupbuy_price_label"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="￥12.98"
            android:textColor="@color/red_204"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/item_groupbuy_main_oldprice"
            android:layout_toRightOf="@id/item_groupbuy_main_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_centerVertical="true"
            tools:text="零售价：￥23.3"
            android:textColor="@color/grey_153"
            android:textSize="12sp"/>
    </RelativeLayout>
</RelativeLayout>