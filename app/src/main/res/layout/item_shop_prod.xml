<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp"
    android:id="@+id/item_shopprod_root">
    <LinearLayout
        android:id="@+id/item_shopprod_image_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/item_shopprod_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_shopprod_title"
        android:layout_below="@id/item_shopprod_image_layout"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:maxLines="2"
        tools:text="上的飞机爱丽丝的飞机零件是劳动纠纷垃圾的说服力是老大放假啦"
        android:textColor="@color/grey_333333"
        android:textSize="15sp"
        />

    <RelativeLayout
        android:layout_below="@id/item_shopprod_title"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/item_shopprod_likecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/xihuan_heart_gray"
            android:drawablePadding="5dp"
            android:text="233"
            android:gravity="center"/>

        <TextView
            android:id="@+id/item_shopprod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="￥12.98"
            android:textColor="@color/red_ff4949"
            android:textSize="16sp"/>

    </RelativeLayout>
</RelativeLayout>