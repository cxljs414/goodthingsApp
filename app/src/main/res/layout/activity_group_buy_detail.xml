<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/groupbuy_root"
    tools:context="com.goodthings.app.activity.groupbuydetail.GroupBuyDetailActivity">

    <include android:id="@+id/groupdetail_topbar" layout="@layout/top_bar"/>
    <LinearLayout
        android:id="@+id/groupdetail_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:weightSum="2.4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/groupdetail_bottom_shop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/dianpu"
                android:drawablePadding="3dp"
                android:text="店铺"
                android:textSize="11dp"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/groupdetail_bottom_likecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/xihuan2"
                android:gravity="center"
                android:drawablePadding="3dp"
                android:textSize="11dp"
                android:text="喜欢"/>
            <TextView
                android:id="@+id/groupdetail_bottom_sharecount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableTop="@mipmap/fenxiang4"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:textSize="11dp"
                android:text="分享"/>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/groupdetail_buy_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:weightSum="2"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/groupdetail_buy_alone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/red_115">
                <TextView
                    android:id="@+id/groupdetail_buy_alone_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    tools:text="￥33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="单独购买"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupdetail_buy_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@color/red_ff4949">
                <TextView
                    android:id="@+id/groupdetail_buy_group_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    tools:text="￥33"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:text="发起拼团"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/groupdetail_buy_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:background="@color/red_115"
            android:text="邀请好友拼团"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:id="@+id/groupdetail_scrollview"
        android:layout_below="@id/groupdetail_topbar"
        android:layout_above="@id/groupdetail_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/groupdetail_nomal_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/groupdetail_coverpic"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="fitXY"
                        tools:src="@mipmap/qrcode_img"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_margin="@dimen/com_margin">
                    <TextView
                        android:id="@+id/groupdetail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        tools:text="￥23.44"
                        android:textSize="16sp"
                        android:textColor="@color/red_ff4949"/>

                    <TextView
                        android:id="@+id/groupdetail_faqi"
                        android:layout_toRightOf="@id/groupdetail_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:text="/发起价"
                        android:textSize="10sp"
                        android:textColor="@color/red_ff4949"/>

                    <TextView
                        android:id="@+id/groupdetail_sellcount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        tools:text="已团100件 2人团"
                        android:textSize="13sp"
                        android:textColor="@color/grey_153"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/groupdetail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:layout_marginRight="@dimen/com_margin"
                    android:layout_marginBottom="@dimen/com_margin"
                    tools:text="受到法律上的发数量的发生的楼房撒旦发射点发撒地方啊手动阀"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/grey_333333"
                    android:textSize="16sp"
                    android:maxLines="2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/public_background_color"/>

                <TextView
                    android:id="@+id/groupdetail_yqcount"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/com_margin"
                    android:text="支付并邀请1人参团，人数不足自动退款"
                    android:textSize="12sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/public_background_color"/>

                <LinearLayout
                    android:id="@+id/groupdetail_teamslayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp">
                        <TextView
                            android:id="@+id/groupdetail_autoview_top"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/com_margin"
                            android:layout_centerVertical="true"
                            android:text="与他们一起拼团，不用等待"
                            android:textSize="12sp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/next_bt"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/com_margin"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>

                    <com.goodthings.app.view.AutoVerticalViewForGroup
                        android:id="@+id/groupdetail_autoview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                    </com.goodthings.app.view.AutoVerticalViewForGroup>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/com_margin"
                    android:paddingRight="@dimen/com_margin"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/groupdetail_shop_img"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        tools:src="@mipmap/ic_launcher"/>

                    <TextView
                        android:id="@+id/groupdetail_shop_gobt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_border_grey_corner_5"
                        android:text="进店逛逛"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/grey_333333"
                        />
                    <LinearLayout
                        android:layout_toLeftOf="@id/groupdetail_shop_gobt"
                        android:layout_toRightOf="@id/groupdetail_shop_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/groupdetail_shop_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:singleLine="true"
                            tools:text="撒地方撒地方"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/groupdetail_shop_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:singleLine="true"
                            tools:text="商品数量111件，已拼62件"
                            android:textSize="12sp"
                            android:textColor="@color/grey_153"/>
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/groupbuy_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:background="@color/public_background_color"/>
                    <RelativeLayout
                        android:id="@+id/groupbuy_comment_layout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="@dimen/com_margin"
                        android:paddingRight="@dimen/com_margin"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="评价"
                            android:textSize="16sp"
                            android:textColor="@color/grey_69"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:drawableRight="@mipmap/next_bt"
                            android:drawablePadding="10dp"
                            />
                    </RelativeLayout>


                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/groupbuy_comment_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@color/public_background_color"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/com_margin"
                    android:text="商品详情"
                    android:textColor="@color/grey_333333"
                    android:textSize="15sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/groupdetail_html_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/grey_333333"
                    android:lineSpacingExtra="4dp"
                    android:padding="@dimen/com_margin"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_white"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:gravity="center"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/groupdetail_xihuan_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/like_nomal1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/groupdetail_xihuan_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="0"
                                android:textSize="13sp"
                                android:textColor="@color/grey_333333"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="人喜欢"
                                android:textSize="13sp"
                                android:textColor="@color/grey_333333"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="70dp"
                        android:background="@color/grey_white"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:id="@+id/groupdetail_share_img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/fenxiang1"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/groupdetail_share_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="0"
                                android:textSize="13sp"
                                android:textColor="@color/grey_333333"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:text="人分享好友"
                                android:textSize="13sp"
                                android:textColor="@color/grey_333333"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_white"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/groupdetail_success_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/com_margin"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:background="@color/white"
                android:visibility="visible">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ptsucces_bg"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="17sp"
                    android:textColor="@color/grey_333333"
                    android:text="发起拼团成功！"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="27dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/groupdetail_success_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/red_ff4949"
                        android:text="还差1人"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_102"
                        android:textSize="14sp"
                        android:text="就可以马上发货！"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_102"
                    android:layout_marginTop="12dp"
                    android:textSize="14sp"
                    android:text="赶快告诉好友一起拼团吧！"/>

                <TextView
                    android:id="@+id/groupdetail_success_share"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/bg_redff4949_corner_5"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="41dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="23dp"
                    android:text="马上分享"
                    android:textColor="@color/white"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐拼团"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/grey_333333"
                    android:layout_margin="@dimen/com_margin"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/groupdetail_recom_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="@dimen/com_margin"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/groupbuy_grouping_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_gray"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="428dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:elevation="8dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_white_corner_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="正在拼单"
                    android:textColor="@color/grey_333333"/>

                <ImageView
                    android:id="@+id/groupbuy_dialog_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_a8a8a8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/groupbuy_dialog_tip"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:text="仅显示10个正在拼单的人"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="@color/grey_153"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_above="@id/groupbuy_dialog_tip"
                    android:id="@+id/groupbuy_dialog_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"></android.support.v7.widget.RecyclerView>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grouppay_dialog_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_gray"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="337dp"
            android:layout_height="wrap_content"
            android:minHeight="333dp"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:elevation="8dp"
            android:paddingTop="5dp"
            android:background="@drawable/bg_white_corner_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="编辑订单"
                    android:textColor="@color/grey_333333"/>

                <ImageView
                    android:id="@+id/grouppay_dialog_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_a8a8a8"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="20dp">

                <com.goodthings.app.view.RoundAngleImageView
                    android:id="@+id/grouppay_dialog_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    tools:src="@mipmap/default_headpic"
                    android:scaleType="fitXY"
                    app:roundWidth="5dp"
                    app:roundHeight="5dp"/>

                <TextView
                    android:id="@+id/grouppay_dialog_title"
                    android:layout_toLeftOf="@id/grouppay_dialog_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:lines="1"
                    tools:text="四川原产自酿纯高粱酒"
                    android:textSize="13sp"
                    android:textColor="@color/grey_333333"/>

                <TextView
                    android:id="@+id/grouppay_dialog_price"
                    android:layout_toLeftOf="@id/grouppay_dialog_image"
                    android:layout_below="@id/grouppay_dialog_title"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:lines="1"
                    tools:text="424.78元"
                    android:textSize="15sp"
                    android:textColor="@color/red_ff4949"/>
                <LinearLayout
                    android:layout_below="@id/grouppay_dialog_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_333333"
                        android:textSize="12sp"
                        android:text="包邮"/>

                    <TextView
                        android:id="@+id/grouppay_dialog_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_153"
                        android:layout_marginLeft="5dp"
                        android:textSize="12sp"
                        tools:text="目前剩余56件"/>
                </LinearLayout>
            </RelativeLayout>
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/grouppay_dialog_cateflow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:max_select="1"
                >

            </com.zhy.view.flowlayout.TagFlowLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/grey_ffe9e9ea"/>

            <LinearLayout
                android:id="@+id/grouppay_dialog_subcatelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/grouppay_dialog_subcate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:max_select="1"
                    >

                </com.zhy.view.flowlayout.TagFlowLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/grey_ffe9e9ea"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/grouppay_dialog_reduce"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="-"
                        android:gravity="center"
                        android:background="@drawable/bg_redff4949_cborder"
                        />

                    <TextView
                        android:id="@+id/grouppay_dialog_count"
                        android:layout_width="45dp"
                        android:layout_height="25dp"
                        android:text="1"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/grouppay_dialog_add"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:text="+"
                        android:gravity="center"
                        android:background="@drawable/bg_redff4949_cborder"
                        />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                >
                <TextView
                    android:id="@+id/grouppay_dialog_submmit"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_centerInParent="true"
                    tools:text="￥2000 确定"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_redff4949_corner_5"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/grouppay_contract_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/alpha_gray"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="337dp"
            android:layout_height="333dp"
            android:layout_centerInParent="true"
            android:elevation="8dp"
            android:paddingTop="5dp"
            android:background="@drawable/bg_white_corner_5">

            <RelativeLayout
                android:id="@+id/grouppay_contract_top"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="好事发生预购协议"
                    android:textColor="@color/grey_333333"/>

                <ImageView
                    android:id="@+id/grouppay_contract_close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/close"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <ScrollView
                android:layout_below="@id/grouppay_contract_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/grouppay_contract_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:lineSpacingExtra="3dp"
                        />
                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
