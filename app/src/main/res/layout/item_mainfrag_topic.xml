<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="10dp">

    <RelativeLayout
        android:id="@+id/item_mainfrag_topic_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_mainfrag_topic_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/topic"
            android:textColor="@color/grey_333333"
            android:textSize="16sp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_width="9dp"
            android:layout_height="17dp"
            android:src="@mipmap/next_bt"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/item_mainfrag_topic_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:weightSum="2">
        <RelativeLayout
            android:id="@+id/item_mainfrag_topic_item_root"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/item_mainfrag_topic_item_image"
                android:layout_width="165dp"
                android:layout_height="107dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/item_mainfrag_topic_item_title"
                android:layout_below="@id/item_mainfrag_topic_item_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lines="1"
                android:text="记录数据的法律科技时代撒旦飞洒地方"
                android:textSize="13sp"
                android:textColor="@color/grey_333333"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_mainfrag_topic_item_root1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone">
            <ImageView
                android:id="@+id/item_mainfrag_topic_item_image1"
                android:layout_width="165dp"
                android:layout_height="107dp"
                android:scaleType="fitXY"
                />
            <TextView
                android:id="@+id/item_mainfrag_topic_item_title1"
                android:layout_below="@id/item_mainfrag_topic_item_image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:lines="1"
                android:text="记录数据的法律科技时代撒旦飞洒地方"
                android:textSize="13sp"
                android:textColor="@color/grey_333333"/>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>