<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/shop_root"
    tools:context="com.goodthings.app.activity.shop.ShopActivity">

    <include android:id="@+id/shop_topbar" layout="@layout/top_bar" />
    <android.support.design.widget.CoordinatorLayout
        android:layout_below="@id/shop_topbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--标题-->
        <android.support.design.widget.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:collapsedTitleTextAppearance="@style/ToolBarTitleText"
                app:contentScrim="#ffffff"
                app:expandedTitleMarginEnd="48dp"
                app:expandedTitleMarginStart="48dp"
                app:expandedTitleTextAppearance="@style/transparentText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title=""
                app:titleEnabled="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@color/white"
                    android:orientation="vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/shop_coverpic"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:layout_marginTop="@dimen/com_margin"
                        tools:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:id="@+id/shop_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        tools:text="我的昵称"
                        android:textColor="@color/grey_333333"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/shop_count1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            tools:text="商品数量111件"
                            android:textColor="@color/grey_102"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/shop_count2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            tools:text="已售622万件"
                            android:textColor="@color/grey_102"
                            android:textSize="13sp"
                            />
                        <TextView
                            android:id="@+id/shop_count3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:singleLine="true"
                            tools:text="粉丝数6652"
                            android:textColor="@color/grey_102"
                            android:textSize="13sp"
                            />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/shop_follow"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="@dimen/com_margin"
                        android:background="@drawable/bg_redff4949_corner_10"
                        android:text="关注"
                        android:gravity="center"
                        android:textColor="@color/white"
                        />
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <android.support.design.widget.TabLayout
                android:id="@+id/shop_tablayout"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:tabSelectedTextColor="@color/black"
                app:tabTextColor="@color/black"
                android:scrollIndicators="bottom"
                app:tabIndicatorColor="@color/black"
                android:background="@color/white">

            </android.support.design.widget.TabLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>
    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
