<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_home_live_image"
        android:layout_width="200dp"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_below="@id/item_home_live_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_home_live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="玩就玩些刺激的"
            android:textColor="@color/black"/>

        <RelativeLayout
            android:id="@+id/home_remommend_userlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentBottom="true">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/home_remommend_headview"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/home_remommend_nickname"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/home_remommend_headview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:text="风很的少年"
                />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>