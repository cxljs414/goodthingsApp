<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_mainfrag_topic_item_root"
        android:layout_width="165dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_mainfrag_topic_item_image"
            android:layout_width="165dp"
            android:layout_height="107dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/item_mainfrag_topic_item_title"
            android:layout_below="@id/item_mainfrag_topic_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lines="1"
            android:text="记录数据的法律科技时代撒旦飞洒地方"
            android:textSize="13sp"
            android:textColor="@color/grey_333333"/>

    </RelativeLayout>

</RelativeLayout>