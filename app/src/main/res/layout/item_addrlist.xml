<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/itemaddr_root"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">


    <CheckBox
        android:id="@+id/itemaddr_check"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="5dp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/itemaddr_name"
        android:layout_toRightOf="@id/itemaddr_check"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        tools:text="常兴"
        android:textColor="@color/grey_333333" />

    <TextView
        android:id="@+id/itemaddr_phone"
        android:layout_toRightOf="@id/itemaddr_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        tools:text="15510488345"
        android:textColor="@color/grey_333333" />

    <TextView
        android:id="@+id/itemaddr_default"
        android:layout_toRightOf="@id/itemaddr_phone"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/bg_redff4949_border_corner5"
        android:text="默认"
        android:textSize="10sp"
        android:textColor="@color/red_ff4949" />

    <ImageView
        android:id="@+id/itemaddr_edit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/xiugai"
        android:layout_marginTop="7dp"
        android:scaleType="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/itemaddr_detail"
        android:layout_toRightOf="@id/itemaddr_check"
        android:layout_below="@id/itemaddr_name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        tools:text="北京市西三环红木街"
        android:textSize="13sp"
        android:textColor="@color/grey_153" />

</RelativeLayout>