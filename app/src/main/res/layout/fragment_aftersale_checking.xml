<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/frag_aftersale_checking_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待商家处理售后申请"
                        android:textSize="17sp"
                        android:textColor="@color/grey_333333"/>
                    <TextView
                        android:id="@+id/frag_aftersale_checking_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/com_margin"
                        android:textColor="@color/grey_333333"
                        android:textSize="14sp"
                        android:lineSpacingExtra="5dp"
                        tools:text=""
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/frag_aftersale_checking_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dengdaichuli"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/grey_333333"
                    android:text="协商详情"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="处理方式："/>
                <TextView
                    android:id="@+id/frag_aftersale_checking_clfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款原因："/>
                <TextView
                    android:id="@+id/frag_aftersale_checking_tkyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款说明："/>
                <TextView
                    android:id="@+id/frag_aftersale_checking_tksm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款金额："/>
                <TextView
                    android:id="@+id/frag_aftersale_checking_tkje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款时间："/>
                <TextView
                    android:id="@+id/frag_aftersale_checking_tksj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/frag_aftersale_checking_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/grey_239"
            android:text="取消申请"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/grey_333333"
            />

        <TextView
            android:id="@+id/frag_aftersale_checking_update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_ff4949"
            android:text="修改申请"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/frag_aftersale_checking_again"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/red_ff4949"
            android:text="再次申请"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>