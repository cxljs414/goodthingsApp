<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="165dp"
    android:layout_height="wrap_content"
    android:id="@+id/home_favorite_root"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.goodthings.app.view.RoundAngleImageView
        android:id="@+id/home_favorite_image"
        android:layout_width="165dp"
        android:layout_height="165dp"
        app:roundHeight="5dp"
        app:roundWidth="5dp"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/home_favorite_title"
        android:layout_below="@id/home_favorite_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLength="12"
        android:textColor="@color/black"
        android:textSize="13sp"/>
    <RelativeLayout
        android:layout_below="@id/home_favorite_title"
        android:id="@+id/home_favorite_userlayout"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_favorite_headview"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/touxiang" />

        <TextView
            android:id="@+id/home_favorite_nickname"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/home_favorite_headview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="10sp"
            android:text="风很的少年"
            />
        <TextView
            android:id="@+id/home_favorite_likecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:textSize="10sp"
            android:text="204"/>
        <ImageView
            android:id="@+id/home_favorite_likecheckbox"
            android:layout_toLeftOf="@id/home_favorite_likecount"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@mipmap/like_yes"
            />
    </RelativeLayout>
</RelativeLayout>