<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/frag_aftersale_result_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="@dimen/com_margin"
                    android:paddingRight="@dimen/com_margin"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="售后已取消"
                        android:textSize="17sp"
                        android:textColor="@color/red_ff4949"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/frag_aftersale_result_waiting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="106dp"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:padding="20dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="等待商家处理售后申请"
                        android:textSize="17sp"
                        android:textColor="@color/grey_333333"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/dengdaiqueren"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/frag_aftersale_result_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@color/white"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/frag_aftersale_result_success_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/cehnggong"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_below="@id/frag_aftersale_result_success_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/com_margin"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:text="退款成功"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"/>

            <RelativeLayout
                android:id="@+id/frag_aftersale_result_express"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="快递详情"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/next_bt"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="处理方式："/>
                <TextView
                    android:id="@+id/frag_aftersale_result_clfs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款原因："/>
                <TextView
                    android:id="@+id/frag_aftersale_result_tkyy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款说明："/>
                <TextView
                    android:id="@+id/frag_aftersale_result_tksm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/com_margin"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/grey_333333"
                    android:text="退款金额："/>
                <TextView
                    android:id="@+id/frag_aftersale_result_tkje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/com_margin"
                    android:textSize="15sp"
                    android:textColor="@color/grey_153"
                    tools:text="退款"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>