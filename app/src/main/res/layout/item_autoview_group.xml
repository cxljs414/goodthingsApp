<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/com_margin"
    android:paddingRight="@dimen/com_margin">


    <RelativeLayout
        android:id="@+id/item_autoview_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_autoview_group_headpic"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/item_autoview_group_ctbt"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_redff4949_corner_5"
            android:text="参团"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/item_autoview_group_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_autoview_group_ctbt"
            tools:text="还差1人成团"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_autoview_group_nickname"
            android:layout_toLeftOf="@id/item_autoview_group_count"
            android:layout_toRightOf="@id/item_autoview_group_headpic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            tools:text="螺丝扣搭街坊啦"
            android:textSize="13sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_autoview_group1"
        android:layout_below="@id/item_autoview_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_autoview_group_headpic1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/item_autoview_group_ctbt1"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_redff4949_corner_5"
            android:text="参团"
            android:gravity="center"
            android:textSize="13sp"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/item_autoview_group_count1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/item_autoview_group_ctbt1"
            tools:text="还差1人成团"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/item_autoview_group_nickname1"
            android:layout_toLeftOf="@id/item_autoview_group_count1"
            android:layout_toRightOf="@id/item_autoview_group_headpic1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            tools:text="螺丝扣搭街坊啦"
            android:textSize="13sp"/>
    </RelativeLayout>
</RelativeLayout>