<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goodthings.app.activity.addaddr.AddAddrActivity">

    <include android:id="@+id/addaddr_topbar" layout="@layout/top_bar"/>

    <LinearLayout
        android:id="@+id/addaddr_info_layout"
        android:layout_below="@id/addaddr_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="联系人："
                android:textSize="14sp"
                android:textColor="@color/grey_333333"/>
            <EditText
                android:id="@+id/addaddr_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:background="@null"
                android:hint="姓名"
                android:textSize="12sp"
                android:textColor="@color/grey_153"
                tools:text="张三"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ffe9e9ea"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="电    话："
                android:textSize="14sp"
                android:textColor="@color/grey_333333"/>
            <EditText
                android:id="@+id/addaddr_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="1"
                android:background="@null"
                android:hint="电话"
                android:maxLength="11"
                android:inputType="phone"
                android:textSize="12sp"
                android:textColor="@color/grey_153"
                tools:text="1335343454"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ffe9e9ea"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="地    址："
                android:textSize="14sp"
                android:textColor="@color/grey_333333"/>
            <TextView
                android:id="@+id/addaddr_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:background="@null"
                android:hint="地址"
                android:textSize="12sp"
                android:textColor="@color/grey_153"
                tools:text="北京市房山区"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ffe9e9ea"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text=""
                android:textSize="14sp"
                android:textColor="@color/grey_333333"/>
            <EditText
                android:id="@+id/addaddr_detail_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="详细地址"
                android:lineSpacingExtra="5dp"
                android:textSize="12sp"
                android:textColor="@color/grey_153"
                tools:text="就拉开松井大辅了世界的分厘卡拉升阶段了房间啊收到两份拉萨的法律"
                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_ffe9e9ea"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/addaddr_default"
        android:layout_below="@id/addaddr_info_layout"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:button="@null"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:text="设为默认"
        android:gravity="center"
        android:textColor="@drawable/rb_text_white_select"
        android:background="@drawable/corner_red_grey__select"/>

    <TextView
        android:id="@+id/addaddr_save"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/red_ff4949"
        android:layout_alignParentBottom="true"
        android:text="保存"
        android:textColor="@color/white"
        android:gravity="center"/>
</RelativeLayout>
